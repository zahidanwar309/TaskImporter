<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.crowdlab.taskimporter.activities"
          android:versionCode="1"
          android:versionName="1.0">
     
    <application
        android:icon="@drawable/ic_launcher" 
        android:label="@string/app_name" 
        android:configChanges="orientation" 
        android:theme="@android:style/Theme.Black.NoTitleBar" 
        android:largeHeap="true">
        
        <activity android:name=".SplashActivity" android:label="Splash screen" android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <activity android:name=".TaskListActivity" 
                  android:label="Task list" 
                  android:configChanges="orientation">
        </activity>
        
        
        
    </application>
    
    <!-- Permission to write/read on external storage-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="14" />
</manifest>
